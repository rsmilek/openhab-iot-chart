{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      // Prepare:
      // 1. /usr/bin/google-chrome-stable --remote-debugging-port=9222 --user-data-dir=/tmp/chrome-debug &
      // 2. npm start
      // 3. Navigate to url = http://localhost:3000/
      // 4. Start debugging by F5
      // 5. Refresh page in chrome
      // 6. Finish debugging by disconnect
      "name": "Attach to Chrome, with sourcemaps",
      "type": "chrome",
      "request": "attach",
      "url": "http://localhost:3000",
      "port": 9222,
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      }
    },
    {
      // Not working on WSL2
      "name": "Launch Chrome against localhost",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceRoot}/src",
      "sourceMapPathOverrides": {
        "webpack:///src/*": "${webRoot}/*"
      },
      "runtimeExecutable": "/usr/bin/google-chrome-stable",
      "runtimeArgs": ["--new-window", "--remote-debugging-port=9222", "--disable-background-networking"],
      "userDataDir": true
    }
  ]
}
